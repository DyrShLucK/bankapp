pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = credentials('DOCKER_REGISTRY')
        DB_PASSWORD     = credentials('DB_PASSWORD')
        GITHUB_USERNAME = credentials('GITHUB_USERNAME')
        IMAGE_TAG       = "${env.BUILD_NUMBER}"
        NAMESPACE_DEV   = 'bankapp-dev'
        NAMESPACE_PROD  = 'bankapp-prod'
    }

    stages {
        stage('Fix Permissions') {
                    steps {
                        script {
                            sh '''
                            # Даем права на выполнение gradlew
                            chmod +x gradlew
                            '''
                        }
                    }
                }

                stage('Build & Test All Projects') {
                    steps {
                        sh './gradlew clean test'
                    }
                }

                stage('Build All Services') {
                    steps {
                        sh './gradlew clean build'
                    }
                }

                stage('Build Docker Images') {
                    steps {
                        script {
                            def services = [
                                'account-service', 'blocker-service', 'cash-service',
                                'exchange-service', 'exchangegenerator-service', 'front-service',
                                'notifications-service', 'transfer-service'
                            ]

                            for (def service : services) {
                                dir("${service}") {
                                    sh "docker build -t ${DOCKER_REGISTRY}/${service}:${IMAGE_TAG} ."
                                }
                            }
                        }
                    }
                }

        stage('Push Docker Images') {
            steps {
                withCredentials([string(credentialsId: 'GHCR_TOKEN', variable: 'GHCR_TOKEN')]) {
                    sh """
                    echo \$GHCR_TOKEN | docker login ghcr.io -u ${GITHUB_USERNAME} --password-stdin
                    """

                    script {
                        def services = [
                            'account-service', 'blocker-service', 'cash-service',
                            'exchange-service', 'exchangegenerator-service', 'front-service',
                            'notifications-service', 'transfer-service'
                        ]

                        for (def service : services) {
                            sh "docker push ${DOCKER_REGISTRY}/${service}:${IMAGE_TAG}"
                        }
                    }
                }
            }
        }
        stage('Create Image Pull Secret') {
                    steps {
                        withCredentials([string(credentialsId: 'GHCR_TOKEN', variable: 'GHCR_TOKEN')]) {
                            script {
                                // Команда kubectl для создания docker-registry secret
                                // Использует переменные окружения Jenkins и GITHUB_USERNAME
                                sh """
                                    kubectl get namespace ${NAMESPACE_DEV} || kubectl create namespace ${NAMESPACE_DEV}
                                    kubectl create secret docker-registry regcred \\
                                      --docker-server=ghcr.io \\
                                      --docker-username=${GITHUB_USERNAME} \\
                                      --docker-password=\${GHCR_TOKEN} \\
                                      --namespace=${NAMESPACE_DEV} \\
                                      --dry-run=client -o yaml | kubectl apply -f -
                                """
                            }
                        }
                    }
                    post {
                        failure {
                            echo "Не удалось создать или обновить imagePullSecret 'regcred' в namespace ${NAMESPACE_DEV}."
                            echo "Проверьте права доступа kubectl и существование namespace."
                        }
                    }
                }
        stage('Trigger Kafka Pipeline') {
                steps {
                    script {
                        echo "=== Запуск пайплайна деплоя Kafka: bankapp-kafka-deploy ==="
                        try {
                            build job: 'bankapp-kafka-deploy', // <-- Имя джоба Kafka
                                 wait: true // Ждать завершения
                            echo "=== Пайплайн Kafka завершён успешно ==="
                        } catch (Exception e) {
                            echo "=== ОШИБКА при запуске пайплайна Kafka: ${e.getMessage()} ==="
                            throw e
                        }
                    }
                }
            }
        stage('Helm Deploy to DEV') {
            steps {
                sh """
                helm dependency update charts/bankapp-umbrella
                helm upgrade --install bankapp-dev charts/bankapp-umbrella \\
                  --namespace ${NAMESPACE_DEV}  \\
                  -f charts/bankapp-umbrella/values-dev.yaml \\
                  --set global.image.repository=${DOCKER_REGISTRY} \\
                  --set global.image.tag=${IMAGE_TAG} \\
                  --set global.image.pullPolicy=Always \\
                  --set infrastructure.keycloak.enabled=true \\
                  --set infrastructure.keycloak.import.enabled=true \\
                  --set infrastructure.ingress.enabled=true \\
                  --debug \\
                  --timeout 5m
                """
            }
        }
        stage('Wait for Pods to be Ready') {
                    steps {
                        script {
                            sh """
                                kubectl wait --for=condition=Ready pod \\
                                  --all \\
                                  --namespace=${NAMESPACE_DEV} \\
                                  --timeout=3000s
                            """
                        }
                    }
                }
        stage('Helm Test') {
            steps {
                script {
                    sh "helm test bankapp-dev --namespace ${NAMESPACE_DEV} --logs || true"
                }
            }
        }

        stage('Manual Approval for PROD') {
            steps {
                input message: 'Deploy to PROD environment?', ok: 'Yes, deploy'
            }
        }

    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}