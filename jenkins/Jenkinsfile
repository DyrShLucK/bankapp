pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = credentials('DOCKER_REGISTRY')
        DB_PASSWORD     = credentials('DB_PASSWORD')
        GITHUB_USERNAME = credentials('GITHUB_USERNAME')
        IMAGE_TAG       = "${env.BUILD_NUMBER}"
        NAMESPACE_DEV   = 'bankapp-dev'
        NAMESPACE_PROD  = 'bankapp-prod'
    }

    stages {
        stage('Fix Permissions') {
                    steps {
                        script {
                            sh '''
                            # Даем права на выполнение gradlew
                            chmod +x gradlew
                            '''
                        }
                    }
                }

                stage('Build & Test All Projects') {
                    steps {
                        // Собираем и тестируем ВСЕ проекты из корня
                        sh './gradlew clean test'
                    }
                }

                stage('Build All Services') {
                    steps {
                        // Собираем все JAR файлы из корня
                        sh './gradlew clean build'
                    }
                }

                stage('Build Docker Images') {
                    steps {
                        script {
                            def services = [
                                'account-service', 'blocker-service', 'cash-service',
                                'exchange-service', 'exchangegenerator-service', 'front-service',
                                'notifications-service', 'transfer-service'
                            ]

                            for (def service : services) {
                                // JAR файлы будут в поддиректориях build/libs каждого сервиса
                                dir("${service}") {
                                    sh "docker build -t ${DOCKER_REGISTRY}/${service}:${IMAGE_TAG} ."
                                }
                            }
                        }
                    }
                }

        stage('Push Docker Images') {
            steps {
                withCredentials([string(credentialsId: 'GHCR_TOKEN', variable: 'GHCR_TOKEN')]) {
                    sh """
                    echo \$GHCR_TOKEN | docker login ghcr.io -u ${GITHUB_USERNAME} --password-stdin
                    """

                    script {
                        def services = [
                            'account-service', 'blocker-service', 'cash-service',
                            'exchange-service', 'exchangegenerator-service', 'front-service',
                            'notifications-service', 'transfer-service'
                        ]

                        for (def service : services) {
                            sh "docker push ${DOCKER_REGISTRY}/${service}:${IMAGE_TAG}"
                        }
                    }
                }
            }
        }

        stage('Install Dependencies to DEV') {
            steps {
                sh """
                helm repo add bitnami https://charts.bitnami.com/bitnami
                helm repo update

                helm upgrade --install postgres bitnami/postgresql \\
                  --namespace ${NAMESPACE_DEV} --create-namespace \\
                  --set auth.database=bankapp \\
                  --set auth.username=postgres \\
                  --set auth.password=${DB_PASSWORD}

                helm upgrade --install redis bitnami/redis \\
                  --namespace ${NAMESPACE_DEV} --create-namespace \\
                  --set auth.enabled=false
                """
            }
        }

        stage('Create DB Secrets for DEV') {
            steps {
                sh """
                kubectl create secret generic bankapp-secret \\
                  --from-literal=SPRING_R2DBC_PASSWORD=${DB_PASSWORD} \\
                  --from-literal=keycloak-client-secret=your-keycloak-secret \\
                  -n ${NAMESPACE_DEV} --dry-run=client -o yaml | kubectl apply -f -
                """
            }
        }

        stage('Helm Deploy to DEV') {
            steps {
                sh """
                helm upgrade --install bankapp-dev charts/bankapp-umbrella \\
                  --namespace ${NAMESPACE_DEV} --create-namespace \\
                  -f charts/bankapp-umbrella/values-dev.yaml \\
                  --set global.image.repository=${DOCKER_REGISTRY} \\
                  --set global.image.tag=${IMAGE_TAG} \\
                  --set infrastructure.keycloak.enabled=true \\
                  --set infrastructure.ingress.enabled=true \\
                  --atomic \\
                  --timeout 5m
                """
            }
        }

        stage('Helm Test') {
            steps {
                sh "helm test bankapp-dev --namespace ${NAMESPACE_DEV}"
            }
        }

        stage('Manual Approval for PROD') {
            steps {
                input message: 'Deploy to PROD environment?', ok: 'Yes, deploy'
            }
        }

        stage('Install Dependencies to PROD') {
            steps {
                sh """
                helm upgrade --install postgres bitnami/postgresql \\
                  --namespace ${NAMESPACE_PROD} --create-namespace \\
                  --set auth.database=bankapp \\
                  --set auth.username=postgres \\
                  --set auth.password=${DB_PASSWORD}

                helm upgrade --install redis bitnami/redis \\
                  --namespace ${NAMESPACE_PROD} --create-namespace \\
                  --set auth.enabled=false
                """
            }
        }

        stage('Create DB Secrets for PROD') {
            steps {
                sh """
                kubectl create secret generic bankapp-secret \\
                  --from-literal=SPRING_R2DBC_PASSWORD=${DB_PASSWORD} \\
                  --from-literal=keycloak-client-secret=your-keycloak-secret \\
                  -n ${NAMESPACE_PROD} --dry-run=client -o yaml | kubectl apply -f -
                """
            }
        }

        stage('Helm Deploy to PROD') {
            steps {
                sh """
                helm upgrade --install bankapp-prod charts/bankapp-umbrella \\
                  --namespace ${NAMESPACE_PROD} --create-namespace \\
                  -f charts/bankapp-umbrella/values-prod.yaml \\
                  --set global.image.repository=${DOCKER_REGISTRY} \\
                  --set global.image.tag=${IMAGE_TAG} \\
                  --set infrastructure.keycloak.enabled=true \\
                  --set infrastructure.ingress.enabled=true \\
                  --atomic \\
                  --timeout 5m
                """
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}